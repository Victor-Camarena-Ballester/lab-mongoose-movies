<h2>List of Movies</h2>
<a href="/movies/new">Add New Movie!</a>
{{#each movies}}
<div style="padding: 10px">
    <a href="/movies/{{this._id}}">{{this.title}}</a>
    <form style="display:inline" action="/movies/{{this._id}}/delete" method="POST"><input type="submit" value="delete">
    </form>

</div>
{{/each}}